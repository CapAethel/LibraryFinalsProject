@model LibraryFinalsProject.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<h1>@ViewData["Title"]</h1>

<!-- Edit Book Form -->
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required>
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" value="@Model.Author" required>
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" id="CategoryId" name="CategoryId" required>
            @foreach (var category in ViewBag.Categories as List<LibraryFinalsProject.Models.Category>)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Cancel</a>
</form>
