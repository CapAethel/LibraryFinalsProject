@if (Context.User.Identity.Name != null)
{
    <form class="navbar-form navbar-right ml-auto" asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <span class="navbar-text">Hello @Context.User.Identity.Name!</span>
            </li>
            <li class="nav-item ml-2">
                <button type="submit" class="btn btn-danger navbar-btn">Log Out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="btn btn-outline-secondary mr-2" asp-controller="Account" asp-action="Registration">Registration</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-info" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}